<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_product"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_radius"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sample1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_item_product_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="s" />

    <TextView
        android:id="@+id/tv_item_product_name"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="프라다 복조리백"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_item_product"
        app:layout_constraintTop_toTopOf="@+id/iv_item_product" />

    <TextView
        android:id="@+id/tv_item_product_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수원시 영통구 원천동"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/tv_item_product_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_product_name" />

    <TextView
        android:id="@+id/tv_item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50,000원"
        android:textSize="21sp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_product_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_product_address" />

    <ImageView
        android:id="@+id/iv_item_chat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="302dp"
        android:src="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/tv_item_chat_count"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="16"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_chat_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_item_chat_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_item_chat_icon" />

    <ImageView
        android:id="@+id/iv_item_like_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_chat_count"
        app:layout_constraintStart_toEndOf="@+id/tv_item_chat_count"
        app:layout_constraintTop_toTopOf="@+id/tv_item_chat_count" />

    <TextView
        android:id="@+id/tv_item_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_like_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_item_like_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_item_like_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>